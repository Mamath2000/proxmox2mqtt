# Configuration Proxmox
PROXMOX_HOST=192.168.1.100
PROXMOX_USER=root
PROXMOX_PASSWORD=your-password
PROXMOX_REALM=pam
PROXMOX_PORT=8006

# Configuration de reconnexion Proxmox (en secondes)
PROXMOX_RECONNECT_INTERVAL=30        # Délai initial
PROXMOX_MAX_RECONNECT_INTERVAL=300   # Délai maximum (5 minutes)

# Configuration MQTT
MQTT_BROKER=mqtt://192.168.1.50:1883
MQTT_USERNAME=your-mqtt-username
MQTT_PASSWORD=your-mqtt-password
MQTT_CLIENT_ID=proxmox2mqtt

# Configuration MQTT avancée (timeouts en secondes)
MQTT_KEEPALIVE=60
MQTT_CONNECT_TIMEOUT=60
MQTT_RECONNECT_PERIOD=20

# Configuration générale
UPDATE_INTERVAL=30
REFRESH_INTERVAL=300
LOG_LEVEL=info
NODE_NAME_PREFIX=proxmox

# Configuration des backups
PROXMOX_BACKUP_STORAGE=local          # Storage à utiliser pour les backups
PROXMOX_BACKUP_MODE=stop              # Mode de backup: stop, suspend, snapshot
PROXMOX_BACKUP_COMPRESS=zstd          # Compression: zstd, gzip, lzo
PROXMOX_BACKUP_REMOVE=1               # Supprimer les anciens backups (0=non, 1=oui)

# Configuration surveillance des backups
PROXMOX_BACKUP_CHECK_INTERVAL=10      # Fréquence de vérification des backups (en secondes)